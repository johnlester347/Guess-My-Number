{
  "name": "guess-my-number",
  "version": "1.0.0",
  "description": "Simple game using HTML/CSS/SASS/JS",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last ten versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "John Lester",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^8.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnlester347/Guess-My-Number.git"
  },
  "bugs": {
    "url": "https://github.com/johnlester347/Guess-My-Number/issues"
  },
  "homepage": "https://github.com/johnlester347/Guess-My-Number#readme"
}
